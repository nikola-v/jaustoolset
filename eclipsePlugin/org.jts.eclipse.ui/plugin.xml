<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>
    <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="JTS.menu.actionSet"
            label="JTS"
            visible="true">
         <menu
               id="JTS.menu.menu"
               label="JTS"
               path="jtsGroup">
            <separator
                  name="separator">
            </separator>
            <groupMarker
                  name="JTSContent">
            </groupMarker>
         </menu>
         <action
               class="org.jts.eclipse.ui.actions.GenerateCodeActionDelegate"
               id="JTS.menu.codegenerator"
               label="Generate Code..."
               menubarPath="JTS.menu.menu/JTSContent"
               style="push"
               tooltip="Generate code">
         </action>
         <action
               class="org.jts.eclipse.ui.actions.GenerateDocActionDelegate"
               id="JTS.menu.docgen"
               label="Generate Document..."
               menubarPath="JTS.menu.menu/JTSContent"
               style="push"
               tooltip="Generate SAE documents">
         </action>
         <action
               class="org.jts.eclipse.ui.actions.ConvertJsidlActionDelegate"
               id="JTS.menu.convert"
               label="Export to JSIDL..."
               menubarPath="JTS.menu.menu/JTSContent"
               style="push"
               tooltip="Convert current CJSIDL document to JSIDL">
         </action>
      </actionSet>
   </extension>
   
   <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="csd"
            id="org.jts.eclipse.Cjsidl"
            name="Cjsidl Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.jts.eclipse.Cjsidl.validate">
         <activeWhen>
            <reference
                    definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.jts.eclipse.Cjsidl.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.jts.eclipse.Cjsidl" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.jts.eclipse.Cjsidl"
            name="Cjsidl">
            <keywordReference id="org.jts.eclipse.ui.keyword_Cjsidl"/>
        </page>
        <page
            category="org.jts.eclipse.Cjsidl"
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.jts.eclipse.Cjsidl.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.jts.eclipse.ui.keyword_Cjsidl"/>
        </page>
        <page
            category="org.jts.eclipse.Cjsidl"
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.jts.eclipse.Cjsidl.templates"
            name="Templates">
            <keywordReference id="org.jts.eclipse.ui.keyword_Cjsidl"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.jts.eclipse.ui.keyword_Cjsidl"
            label="Cjsidl"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.jts.eclipse.Cjsidl.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.jts.eclipse.Cjsidl.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="csd">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="csd">
        </resourceServiceProvider>
    </extension>
	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.jts.eclipse.Cjsidl.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.jts.eclipse.Cjsidl.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="org.jts.eclipse.ui.CjsidlExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jts.eclipse.ui.category.wizards"
            name="CJSIDL">
      </category>
      <wizard
            category="org.jts.eclipse.ui.category.wizards"
            class="org.jts.eclipse.ui.wizard.NewCjsidlFileWizard"
            icon="icon/App32.png"
            id="org.jts.eclipse.ui.wizard.newcjsidlwizard"
            name="CJSIDL File"
            project="false">
      </wizard>
      <wizard
            category="org.jts.eclipse.ui.category.wizards"
            class="org.jts.eclipse.ui.wizard.NewCjsidlEmptyProjWizard"
            icon="icon/App32.png"
            id="org.jts.eclipse.ui.wizard.newcjsidlemptyprojwizard"
            name="CJSIDL Empty Project"
            project="true">
      </wizard>
      <wizard
            category="org.jts.eclipse.ui.category.wizards"
            class="org.jts.eclipse.ui.wizard.NewCjsidlStubProjWizard"
            icon="icon/App32.png"
            id="org.jts.eclipse.ui.wizard.newcjsidlstubprojwizard"
            name="CJSIDL Stub Project"
            project="true">
      </wizard>
      <wizard
            category="org.jts.eclipse.ui.category.wizards"
            class="org.jts.eclipse.ui.wizard.NewCjsidlImportedProjWizard"
            icon="icon/App32.png"
            id="org.jts.eclipse.ui.wizard.newcjsidlimportedprojwizard"
            name="CJSIDL Imported JSIDL Project"
            project="true">
      </wizard>
   </extension>
</plugin>
